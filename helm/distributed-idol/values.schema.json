{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "base":{
            "type": "object",
            "properties": {
                "global": {
                    "$ref": "#/$defs/global"
                },
                "idol-library": {
                    "type": "object"
                },
                "content": {
                    "$ref": "#/$defs/content"
                },
                "dah": {
                    "$ref": "#/$defs/dah"
                },
                "dih": {
                    "$ref": "#/$defs/dih"
                },
                "idol-licenseserver":{
                    "$ref": "#/$defs/optional_object"
                },
                "metrics-server":{
                    "$ref": "#/$defs/optional_object"
                },
                "prometheus":{
                    "$ref": "#/$defs/optional_object"
                },
                "prometheus-adapter":{
                    "$ref": "#/$defs/optional_object"
                },
                "autoscaling":{
                    "$ref": "#/$defs/autoscaling"
                },
                "setupMirrored": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                },
                "ext": {
                    "type": "object"
                }
            },
            "required": [
                "global",
                "autoscaling",
                "content",
                "dih",
                "dah",
                "metrics-server",
                "prometheus",
                "prometheus-adapter",
                "idol-licenseserver",
                "setupMirrored"
            ],
            "allOf":[
                {"$ref": "#/$defs/licensing"},
                {"$ref": "#/$defs/idol_services"}
            ],
            "unevaluatedProperties": false
        },
        "port_number": {
            "type": "string",
            "pattern": "^((6553[0-5])|(655[0-2][0-9])|(65[0-4][0-9]{2})|(6[0-4][0-9]{3})|([1-5][0-9]{4})|([0-5]{0,5})|([0-9]{1,4}))$"
        },
        "volume_size":{
            "type": "string",
            "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
        },
        "required_string":{
            "type": "string",
            "minLength": 1
        },
        "non_zero_number":{
            "type": "string",
            "pattern": "^[1-9]|\\d{2,}$"
        },
        "optional_duration":{
            "type": "string",
            "pattern": "^(([0-9]{1,5}(h|m|s|ms)){1,4})?$"
        },
        "optional_object":{
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required":[
                "enabled"
            ]
        },
        "liveness_probe": {
            "type": "object",
            "properties": {
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "failureThreshold": {
                    "type": "integer"
                }
            }
        },
        "gateway": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "requestTimeout": {
                    "$ref": "#/$defs/optional_duration"
                },
                "backendTimeout": {
                    "$ref": "#/$defs/optional_duration"
                }
            }
        },
        "ingressBase":{
            "type": "object",
            "properties":{
                "enabled": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string",
                    "enum": ["nginx","haproxy", "gateway"]
                },
                "className": {
                    "type": "string"
                },
                "gateway": {
                    "$ref": "#/$defs/gateway"
                },
                "host": {
                    "type": "string"
                },
                "proxyBodySize":{
                    "type":"string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
                },
                "annotations": {
                    "type": "object"
                },
                "tls": {
                    "$ref": "#/$defs/ingressTLS"
                }
            },
            "required":[
                "enabled",
                "type",
                "tls"
            ]
        },
        "ingressCommon":{
            "type": "object",
            "properties":{
                "path": {
                    "$ref": "#/$defs/required_string"
                },
                "servicePath": {
                    "type": "string"
                }
            },
            "required":[
                "path"
            ],
            "allOf":[
                {"$ref":"#/$defs/ingressBase"}
            ]
        },
        "ingressTLS":{
            "type": "object",
            "properties":{
                "secretName": {
                    "type": "string"
                },
                "crt": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                }
            },
            "required":[
                "secretName"
            ]
        },
        "idolImage":{
            "type": "object",
            "properties":{
                "registry": {
                    "$ref": "#/$defs/required_string"
                },
                "version": {
                    "$ref": "#/$defs/required_string"
                },
                "repo": {
                    "$ref": "#/$defs/required_string"
                },
                "imagePullPolicy": {
                    "type": "string",
                    "enum": ["Always", "IfNotPresent", "Never"]
                }
            },
            "required":[
                "registry",
                "version",
                "repo",
                "imagePullPolicy"
            ],
            "unevaluatedProperties": false
        },
        "global":{
            "type": "object",
            "properties":{
                "idolImageRegistry": {
                    "type": "string"
                },
                "idolVersion": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/required_string"
                    }
                },
                "imagePullPolicy": {
                    "type": "string",
                    "enum": ["", "Always", "IfNotPresent", "Never"]
                },
                "idolOemLicenseSecret": {
                    "type": "string",
                    "description": "Optional Secret containing OEM licensekey.dat and versionkey.dat files for licensing."
                },
                "http_proxy":{
                    "type": "string"
                },
                "https_proxy":{
                    "type": "string"
                },
                "no_proxy":{
                    "type": "string"
                }
            },
            "required":[
                "imagePullSecrets"
            ]
        },
        "aciCommon":{
            "type": "object",
            "properties":{
                "idolImage": {
                    "$ref": "#/$defs/idolImage"
                },
                "existingConfigMap": {
                    "type": "string"
                },
                "name": {
                    "$ref": "#/$defs/required_string"
                },
                "aciPort": {
                    "$ref": "#/$defs/port_number"
                },
                "servicePort": {
                    "$ref": "#/$defs/port_number"
                },
                "indexPort": {
                    "$ref": "#/$defs/port_number"
                },
                "livenessProbe": {
                    "$ref": "#/$defs/liveness_probe"
                },
                "additionalVolumes":{
                    "type": ["array", "object", "null"]
                },
                "additionalVolumeMounts":{
                   "type": ["array", "object", "null"]
                },
                "envConfigMap":{
                    "type": "string"
                },
                "usingTLS":{
                    "type": "boolean"
                },
                "containerSecurityContext":{
                    "$ref": "#/$defs/optional_object"
                },
                "podSecurityContext":{
                    "$ref": "#/$defs/optional_object"
                },
                "resources":{
                    "$ref": "#/$defs/optional_object"
                },
                "workingDir":{
                    "type": "string",
                    "description": "Expected working directory for the container. Should only need to change this for a heavily customized image."
                }
            },
            "required":[
                "idolImage",
                "ingress",
                "name",
                "aciPort",
                "servicePort",
                "usingTLS",
                "workingDir"
            ]
        },
        "licensing":{
            "type": "object",
            "properties":{
                "licenseServerHostname": {
                    "type": "string",
                    "format": "hostname"
                },
                "licenseServerPort": {
                    "$ref": "#/$defs/port_number"
                },
                "licenseServerSSLMethod": {
                    "type": "string",
                    "enum": ["None", "Negotiate", "SSLV3", "TLSV1", "TLSV1.2", "TLSV1.3"],
                    "description": "SSL method for license server connection. Valid values: None (no SSL/TLS), Negotiate (use highest protocol supported by both client and server), SSLV3, TLSV1, TLSV1.2, TLSV1.3"
                }
            },
            "required": ["licenseServerHostname","licenseServerPort"]
        },
        "content":{
            "type": "object",
            "properties":{
                "contentStorageClass":{
                    "$ref": "#/$defs/required_string"
                },
                "contentVolumeSize":{
                    "$ref": "#/$defs/volume_size"
                },
                "backupArchiveStorageClass":{
                    "$ref": "#/$defs/required_string"
                },
                "primaryBackupInterval":{
                    "$ref": "#/$defs/required_string"
                },
                "primaryBackupTime":{
                    "$ref": "#/$defs/required_string"
                },
                "initialEngineCount":{
                    "$ref": "#/$defs/non_zero_number"
                },
                "ingress": {
                    "type":"object",
                    "properties":{
                        "exposedContents":{
                            "type":"integer",
                            "minimum": 0
                        },
                        "indexPath": {
                            "type": "string"
                        }
                    },
                    "required":[
                    ],
                    "allOf":[
                        {"$ref":"#/$defs/ingressCommon"}
                    ],
                    "unevaluatedProperties": false
                }
            },
            "required": [
                "contentStorageClass",
                "contentVolumeSize",
                "backupArchiveStorageClass",
                "primaryBackupInterval",
                "primaryBackupTime",
                "initialEngineCount",
                "ingress"
            ],
            "allOf":[
                { "$ref": "#/$defs/aciCommon" }
            ]
        },
        "dah":{
            "type": "object",
            "properties":{
                "ingress": {
                    "type":"object",
                    "properties":{
                    },
                    "required":[
                    ],
                    "allOf":[
                        {"$ref":"#/$defs/ingressCommon"}
                    ],
                    "unevaluatedProperties": false
                },
                "replicas": {
                    "type": "integer"
                }
            },
            "required": [
                "ingress"
            ],
            "allOf":[
                { "$ref": "#/$defs/aciCommon" }
            ]
        },
        "dih":{
            "type": "object",
            "properties":{
                "dihStorageClass":{
                    "$ref": "#/$defs/required_string"
                },
                "prometheusPort":{
                    "$ref": "#/$defs/port_number"
                },
                "ingress": {
                    "type":"object",
                    "properties":{
                        "metricsPath": {
                            "$ref": "#/$defs/required_string"
                        }
                    },
                    "required":[
                        "metricsPath"
                    ],
                    "allOf":[
                        {"$ref":"#/$defs/ingressCommon"}
                    ],
                    "unevaluatedProperties": false
                }
            },
            "required": [
                "dihStorageClass",
                "prometheusPort",
                "ingress"
            ],
            "allOf":[
                { "$ref": "#/$defs/aciCommon" }
            ]
        },
        "autoscaling":{
            "type": "object",
            "properties":{
                "enabled":{
                    "type":"boolean"
                },
                "minReplicas":{
                    "$ref": "#/$defs/non_zero_number"
                },
                "maxReplicas":{
                    "$ref": "#/$defs/non_zero_number"
                },
                "maxDocumentCount":{
                    "$ref": "#/$defs/non_zero_number"
                },
                "targetAverageCpuUse": {
                    "type": "string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:m|k|M|G|T|P|E)?$"
                }
            },
            "required":[
                "enabled",
                "minReplicas",
                "maxReplicas",
                "maxDocumentCount",
                "targetAverageCpuUse"
            ]
        },
        "idol_services":{
            "type":"object",
            "properties":{
                "queryserviceName":{
                    "$ref": "#/$defs/required_string"
                },
                "indexserviceName":{
                    "$ref": "#/$defs/required_string"
                }
            },
            "required":[
                "queryserviceName",
                "indexserviceName"
            ]
        }
    },
    "type": "object",
    "allOf": [
        {"$ref": "#/$defs/base"}
    ],
    "unevaluatedProperties": false
}