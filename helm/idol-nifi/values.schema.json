{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Values",
    "definitions": {
        "Values": {
            "type": "object",
            "properties": {
                "ingressClassName": {
                    "type": "string"
                },
                "ingressBasicAuthData": {
                    "type": "string",
                    "minLength": 1
                },
                "ingressProxyBodySize": {
                    "type": "string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
                },
                "ingressType": {
                    "type": "string",
                    "enum": ["nginx","haproxy"]
                },
                "usingTLS":{
                    "type": "boolean"
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "global": {
                    "#ref": "#/definitions/Global"
                },
                "indexserviceName": {
                    "type": "string",
                    "minLength": 1
                },
                "indexserviceACIPort": {
                    "#ref": "#/definitions/port_number"
                },
                "podSecurityContext":{
                    "type": "object",
                    "properties": {
                        "enabled": { 
                            "type": "boolean"
                        }
                    },
                    "required": ["enabled"]
                },
                "containerSecurityContext":{
                    "type": "object",
                    "properties": {
                        "enabled": { 
                            "type": "boolean"
                        }
                    },
                    "required": ["enabled"]
                },
                "additionalVolumes":{
                    "type": "array"
                },
                "additionalVolumeMounts":{
                    "type": "array"
                },
                "nifi": {
                    "$ref": "#/definitions/Nifi"
                },
                "nifiRegistry": {
                    "$ref": "#/definitions/NifiRegistry"
                },
                "zookeeper": {
                    "$ref": "#/definitions/Zookeeper"
                },
                "idol-licenseserver": {
                    "$ref": "#/definitions/IdolLicenseserver"
                }
            },
            "required": [
                "idol-licenseserver",
                "ingressBasicAuthData",
                "ingressProxyBodySize",
                "ingressType",
                "indexserviceName",
                "indexserviceACIPort",
                "podSecurityContext",
                "containerSecurityContext",
                "nifi",
                "nifiRegistry",
                "usingTLS",
                "name",
                "global"
            ],
            "title": "Values"
        },
        "idolImage":{
            "type": "object",
            "properties":{
                "registry": {
                    "type": "string",
                    "format": "hostname"
                },
                "version": {
                    "type": "string",
                    "minLength": 1
                },
                "repo": {
                    "type": "string",
                    "minLength": 1
                },
                "imagePullPolicy": {
                    "type": "string",
                    "enum": ["Always", "IfNotPresent", "Never"]
                }
            },
            "required":[
                "registry",
                "version",
                "repo"
            ],
            "unevaluatedProperties": false
        },
        "IdolLicenseserver": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required": [
                "enabled"
            ],
            "title": "IdolLicenseserver"
        },
        "Nifi": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "autoScaling": {
                    "$ref": "#/definitions/AutoScaling"
                },
                "resources": {
                    "$ref": "#/definitions/Resources"
                },
                "dataVolume": {
                    "$ref": "#/definitions/DataVolume"
                },
                "jvmMemoryRatio": {
                    "type": "number",
                    "minimum": 0.01,
                    "maximum": 0.99
                },
                "flowfile": {
                    "type":"string",
                    "minLength": 1
                },
                "ingress": {
                    "$ref": "#/definitions/NifiIngress"
                }
            },
            "required": [
                "autoScaling",
                "flowfile",
                "ingress",
                "jvmMemoryRatio",
                "resources",
                "dataVolume"
            ],
            "title": "Nifi"
        },
        "Global":{
            "type": "object",
            "properties":{
                "idolImageRegistry": {
                    "type": "string"
                },
                "idolVersion": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type":"string",
                        "minLength": 1
                    }
                },
                "imagePullPolicy": {
                    "type": "string",
                    "enum": ["", "Always", "IfNotPresent", "Never"]
                }
            },
            "required":[
                "imagePullSecrets"
            ]
        },
        "AutoScaling": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "minReplicas": {
                    "type": "integer",
                    "minimum": 1
                },
                "maxReplicas": {
                    "type": "integer"
                },
                "metrics": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                }
            },
            "required": [
                "enabled",
                "maxReplicas",
                "metrics",
                "minReplicas"
            ],
            "title": "AutoScaling"
        },
        "NifiIngress": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object"
                },
                "host": {
                    "type": "string"
                },
                "proxyPath": {
                    "type": "string"
                },
                "proxyHost": {
                    "type": "string"
                },
                "aciHost": {
                    "type": "string"
                }
            },
            "required": [
                "enabled"
            ],
            "title": "NifiIngress"
        },
        "Resources": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "requests": {
                    "$ref": "#/definitions/Limits"
                },
                "limits": {
                    "$ref": "#/definitions/Limits"
                }
            },
            "required": [
                "limits",
                "requests"
            ],
            "title": "Resources"
        },
        "DataVolume": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "storageClass": {
                    "type": "string",
                    "minLength": 1
                },
                "volumeSize": {
                    "type": "string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
                }
            }
        },
        "Limits": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "cpu": {
                    "type": "string"
                },
                "memoryMi": {
                    "type": "integer"
                }
            },
            "required": [
                "cpu",
                "memoryMi"
            ],
            "title": "Limits"
        },
        "NifiRegistry": {
            "type": "object",
            "properties": {
                "ingress": {
                    "$ref": "#/definitions/NifiRegistryIngress"
                },
                "resources": {
                    "type": "object"
                }
            },
            "required": [
                "ingress",
                "resources"
            ],
            "title": "NifiRegistry"
        },
        "NifiRegistryIngress": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object"
                },
                "host": {
                    "type": "string"
                }
            },
            "required": [
                "enabled",
                "host"
            ],
            "title": "NifiRegistryIngress"
        },
        "Zookeeper": {
            "type": "object",
            "properties": {
                "resources":{
                    "type": "object"
                }
            },
            "required": ["resources"],
            "title": "Zookeeper"
        },
        "port_number": {
            "type": "string",
            "pattern": "^((6553[0-5])|(655[0-2][0-9])|(65[0-4][0-9]{2})|(6[0-4][0-9]{3})|([1-5][0-9]{4})|([0-5]{0,5})|([0-9]{1,4}))$"
        }
    }
}
