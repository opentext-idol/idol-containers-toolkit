{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Values",
    "type": "object",
    "properties": {
        "contentVolumeSize": {
            "type": "string",
            "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
        },
        "contentStorageClass": {
            "type": "string",
            "minLength": 1
        },
        "licenseServerPort": {
            "$ref": "#/$defs/port_number"
        },
        "licenseServerHostname": {
            "type": "string",
            "minLength": 1
        },
        "queryserviceName": {
            "type": "string",
            "minLength": 1
        },
        "queryserviceACIPort": {
            "$ref": "#/$defs/port_number"
        },
        "indexserviceName": {
            "type": "string",
            "minLength": 1
        },
        "indexserviceACIPort": {
            "$ref": "#/$defs/port_number"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "aciPort": {
            "$ref": "#/$defs/port_number"
        },
        "servicePort": {
            "$ref": "#/$defs/port_number"
        },
        "indexPort": {
            "$ref": "#/$defs/port_number"
        },
        "global": {
            "$ref": "#/$defs/global"
        },
        "idolImage": { 
            "$ref": "#/$defs/idolImage"
        },
        "livenessProbe": {
            "$ref": "#/$defs/liveness_probe"
        },
        "additionalVolumes":{
            "type": "array"
        },
        "additionalVolumeMounts":{
            "type": "array"
        },
        "envConfigMap":{
            "type": "string"
        }
    },
    "required": [
        "contentVolumeSize",
        "licenseServerPort",
        "licenseServerHostname",
        "queryserviceName",
        "queryserviceACIPort",
        "indexserviceName",
        "indexserviceACIPort",
        "name",
        "aciPort",
        "servicePort",
        "indexPort",
        "ingress"
    ],

    "$defs": {
        "port_number": {
            "type": "string",
            "pattern": "^((6553[0-5])|(655[0-2][0-9])|(65[0-4][0-9]{2})|(6[0-4][0-9]{3})|([1-5][0-9]{4})|([0-5]{0,5})|([0-9]{1,4}))$"
        },
        "liveness_probe": {
            "type": "object",
            "properties": {
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "failureThreshold": {
                    "type": "integer"
                }
            }
        },
        "ingress":{
            "type": "object",
            "properties":{
                "enabled": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string",
                    "enum": ["nginx","haproxy"]
                },
                "className": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "indexPath": {
                    "type": "string"
                },
                "proxyBodySize": {
                    "type": "string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
                }
            },
            "required":[
                "enabled",
                "type"
            ]
        },
        "idolImage":{
            "type": "object",
            "properties":{
                "registry": {
                    "type": "string",
                    "format": "hostname"
                },
                "version": {
                    "type": "string",
                    "minLength": 1
                },
                "repo": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required":[
                "registry",
                "version",
                "repo"
            ]
        },
        "global":{
            "type": "object",
            "properties":{
                "idolImageRegistry": {
                    "type": "string"
                },
                "idolVersion": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "required":[
                "imagePullSecrets"
            ]
        }
    }
}