{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "base":{
            "type": "object",
            "properties": {
                "global": {
                    "$ref": "#/$defs/global"
                }
            },
            "required": [
                "global"
            ],
            "allOf":[
                {"$ref": "#/$defs/licensing"},
                {"$ref": "#/$defs/answerserver"}
            ],
            "unevaluatedProperties": false
        },
        "port_number": {
            "type": "string",
            "pattern": "^((6553[0-5])|(655[0-2][0-9])|(65[0-4][0-9]{2})|(6[0-4][0-9]{3})|([1-5][0-9]{4})|([0-5]{0,5})|([0-9]{1,4}))$"
        },
        "required_string":{
            "type": "string",
            "minLength": 1
        },
        "optional_object":{
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required":[
                "enabled"
            ]
        },
        "liveness_probe": {
            "type": "object",
            "properties": {
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "failureThreshold": {
                    "type": "integer"
                }
            }
        },
        "ingressCommon":{
            "type": "object",
            "properties":{
                "enabled": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string",
                    "enum": ["nginx","haproxy"]
                },
                "className": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "proxyBodySize":{
                    "type":"string",
                    "pattern": "^\\d+(?:\\.\\d+)?(?:Ki|Mi|Gi|Ti|Pi|Ei|m|k|M|G|T|P|E)?$"
                },
                "annotations": {
                    "type": "object"
                },
                "path": {
                    "$ref": "#/$defs/required_string"
                },
                "servicePath": {
                    "type": "string"
                }
            },
            "required":[
                "enabled",
                "type",
                "path"
            ]
        },
        "idolImage":{
            "type": "object",
            "properties":{
                "registry": {
                    "type": "string",
                    "format": "hostname"
                },
                "version": {
                    "type": "string",
                    "minLength": 1
                },
                "repo": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required":[
                "registry",
                "version",
                "repo"
            ]
        },
        "global":{
            "type": "object",
            "properties":{
                "idolImageRegistry": {
                    "type": "string"
                },
                "idolVersion": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "required":[
                "imagePullSecrets"
            ]
        },
        "aciCommon":{
            "type": "object",
            "properties": {
                "idolImage": {
                    "$ref": "#/$defs/idolImage"
                },
                "existingConfigMap": {
                    "type": "string"
                },
                "name": {
                    "$ref": "#/$defs/required_string"
                },
                "aciPort": {
                    "$ref": "#/$defs/port_number"
                },
                "servicePort": {
                    "$ref": "#/$defs/port_number"
                },
                "livenessProbe": {
                    "$ref": "#/$defs/liveness_probe"
                },
                "additionalVolumes":{
                    "type": "array"
                },
                "additionalVolumeMounts":{
                    "type": "array"
                },
                "envConfigMap":{
                    "type": "string"
                },
                "usingTLS":{
                    "type": "boolean"
                },
                "containerSecurityContext":{
                    "$ref": "#/$defs/optional_object"
                },
                "podSecurityContext":{
                    "$ref": "#/$defs/optional_object"
                },
                "resources":{
                    "$ref": "#/$defs/optional_object"
                }
            },
            "required": [
                "idolImage",
                "ingress",
                "name",
                "aciPort",
                "servicePort",
                "usingTLS"
            ]
        },
        "licensing":{
            "type": "object",
            "properties":{
                "licenseServerHostname": {
                    "type": "string",
                    "format": "hostname"
                },
                "licenseServerPort": {
                    "$ref": "#/$defs/port_number"
                }
            },
            "required": ["licenseServerHostname","licenseServerPort"]
        },
        "answerserver":{
            "type": "object",
            "properties":{
                "factbankPostgresqlServer": {
                    "type": "string",
                    "format": "hostname"
                },
                "factbankPostgresqlPort":{
                    "$ref": "#/$defs/port_number"
                },
                "answerBankAgentstoreHostname": {
                    "type": "string",
                    "format": "hostname"
                },
                "answerBankAgentstorePort":{
                    "$ref": "#/$defs/port_number"
                },
                "passageExtractorHostname": {
                    "type": "string",
                    "format": "hostname"
                },
                "passageExtractorPort":{
                    "$ref": "#/$defs/port_number"
                },
                "passageExtractorAgentstoreHostname": {
                    "type": "string",
                    "format": "hostname"
                },
                "passageExtractorAgentstorePort":{
                    "$ref": "#/$defs/port_number"
                },
                "ingress": {
                    "type":"object",
                    "properties":{
                        "indexPath": {
                            "type": "string"
                        }
                    },
                    "required":[
                    ],
                    "allOf":[
                        {"$ref":"#/$defs/ingressCommon"}
                    ],
                    "unevaluatedProperties": false
                }
            },
            "required": [
                "factbankPostgresqlServer",
                "factbankPostgresqlPort",
                "answerBankAgentstoreHostname",
                "answerBankAgentstorePort",
                "passageExtractorHostname",
                "passageExtractorPort",
                "passageExtractorAgentstoreHostname",
                "passageExtractorAgentstorePort",
                "ingress"
            ],
            "allOf":[
                { "$ref": "#/$defs/aciCommon" }
            ]
        }
    },
    "type": "object",
    "$ref": "#/$defs/base",
    "unevaluatedProperties": false
}